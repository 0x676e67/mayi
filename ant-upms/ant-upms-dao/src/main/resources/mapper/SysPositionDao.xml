<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zf1976.ant.upms.biz.dao.SysPositionDao">
    <!--根据岗位id删除job-user -->
    <delete id="deleteUserRelationById">
        delete
        from sys_user_position_relation
        where position_id
        in
        <foreach collection="ids" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <!--查询用户岗位-->
    <select id="selectListByUserId" resultType="com.zf1976.ant.upms.biz.pojo.po.SysPosition">
        select id,
               name,
               enabled,
               job_sort,
               create_by,
               update_by,
               create_time,
               update_time
        from sys_position
                 join sys_user_position_relation suj on sys_position.id = suj.position_id
        where user_id = #{userId}
    </select>
</mapper>
